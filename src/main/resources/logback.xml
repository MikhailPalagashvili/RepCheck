<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} | %-5level | %X{requestId:-no-id} | %logger{36} | %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Enable debug logging for Ktor and our application -->
  <logger name="io.ktor" level="INFO"/>
  <logger name="com.repcheck" level="INFO"/>
  
  <!-- Enable request/response logging -->
  <logger name="org.http4k.filter.ServerFilters" level="INFO"/>
  <logger name="Application" level="INFO"/>
  <logger name="org.eclipse.jetty" level="INFO"/>
  <logger name="org.jooq" level="INFO"/>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
