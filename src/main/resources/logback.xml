<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} | %-5level | %X{requestId:-no-id} | %logger{36} | %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="io.ktor" level="INFO"/>
  <logger name="com.repcheck" level="DEBUG"/>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
